{
	"compilerOptions": {
		"module": "es2022",
		"moduleResolution": "Node",
		"target": "ES2018",
		"outDir": "dist",
		"lib": [
			"ES2022"
		],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strictFunctionTypes": false,
		"sourceMap": true,
		"isolatedModules": true,
		"baseUrl": ".",
		"skipLibCheck": true,
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	}
}